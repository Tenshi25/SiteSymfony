{% trans_default_domain 'FOSUserBundle'%}
{% extends 'base.html.twig'%}

 {% block fos_user_content %}
     <div class="container" style="margin-top :10px">
        <div class="row">
        </div>
        <div class="row">
            <div class="col-xs-3 col-sm-3"></div>
            <div class="col-xs-6 col-sm-6">
                <div class="panel panel-primary">
                    <div class="panel-heading text-center">Connexion</div>
                    <div class="panel-body">
                        {% if error %}
                            <div><p class="bg-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</p></div>
                        {% endif %}

                        <form action="{{ path("fos_user_security_check") }}" method="post">
                             {% if csrf_token %}
                                 <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                             {% endif %}
                             <div class="form-group">
                                 <label for="username">{{ 'security.login.username'|trans }}</label>
                                 <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
                             </div>
                             <div class="form-group">
                                 <label for="password">{{ 'security.login.password'|trans }}</label>
                                 <input class="form-control" type="password" id="password" name="_password" required="required" autocomplete="current-password" />
                             </div>
                             <div class="form-group">
                                 <input  type="checkbox" id="remember_me" name="_remember_me" value="on" />
                                 <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                             </div>
                             <input class="btn btn-primary btn-lg btn-block" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                        </form>
                    </div>
                    <div class="col-xs-3 col-sm-3"></div>
                </div>
            </div>
        </div>
     </div>
 {% endblock %}