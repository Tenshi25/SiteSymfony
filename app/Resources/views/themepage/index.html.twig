{% extends 'base.html.twig' %}
{% block title %}Liste des themes de pages{% endblock %}
{% block body %}
    <div class="container" style="margin-top :10px">
        <div class="row">
        </div>
        <div class="row">
            <div class="col-xs-1 col-sm-1"></div>
            <div class="col-xs-10 col-sm-10">
                <div class="panel my-panel">
                    <div class="panel-heading text-center"><h2>Liste des themes de pages</h2></div>
                    <div class="panel-body my-panel-body">
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Libtheme</th>
                                <th>Afficher</th>
                                <th>Modifier</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for themePage in themePages %}
                                <tr>
                                    <td>
                                        <a href="{{ path('admin_themepage_show', { 'id': themePage.id }) }}">{{ themePage.id }}</a>
                                    </td>
                                    <td>{{ themePage.libTheme }}</td>
                                    <td><a class="btn btn-danger " type="button" href="{{ path('admin_themepage_show', { 'id': themePage.id  }) }}">Afficher</a>
                                    </td>
                                    <td><a class="btn btn-danger " type="button" href="{{ path('admin_themepage_edit', { 'id': themePage.id   }) }}">Modifier</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <a class="btn btn-danger btn-lg btn-block" type="button" href="{{ path('admin_themepage_new') }}">Cr√©erun statut</a>
                        <a class="btn btn-danger btn-lg btn-block" type="button" href="{{ path('menuAdmin') }}">Retour</a>
                    </div>
                </div>
            </div>
            <div class="col-xs-1 col-sm-1"></div>
        </div>
    </div>
{% endblock %}
