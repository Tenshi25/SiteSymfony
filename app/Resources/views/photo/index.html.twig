{% extends 'base.html.twig' %}
{% block title %}Liste de photos{% endblock %}
{% block body %}
    <div class="container" style="margin-top :10px">
        <div class="row">
        </div>
        <div class="row">
            <div class="col-xs-1 col-sm-1"></div>
            <div class="col-xs-10 col-sm-10">
                <div class="panel my-panel">
                    <div class="panel-heading text-center"><h2>Liste de photos</h2></div>
                    <div class="panel-body my-panel-body">
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Titre</th>
                                <th>Lienphoto</th>
                                <th>Afficher</th>
                                <th>Modifier</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for photo in photos %}
                                <tr>
                                    <td><a href="{{ path('admin_photo_show', { 'id': photo.id }) }}">{{ photo.id }}</a>
                                    </td>
                                    <td>{{ photo.titre }}</td>
                                    <td>{{ photo.lienPhoto }}</td>

                                    <td><a class="btn btn-danger " type="button" href="{{ path('admin_photo_show', { 'id': photo.id  }) }}">Afficher</a></td>
                                    <td><a class="btn btn-danger " type="button" href="{{ path('admin_photo_edit', { 'id': photo.id  }) }}">Modifier</a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <a class="btn btn-danger btn-lg btn-block" type="button" href="{{ path('admin_photo_new') }}">Cr√©er
                            une photo</a>
                        <a class="btn btn-danger btn-lg btn-block" type="button"
                           href="{{ path('menuAdmin') }}">Retour</a>
                    </div>
                </div>
            </div>
            <div class="col-xs-1 col-sm-1"></div>
        </div>
    </div>
{% endblock %}
