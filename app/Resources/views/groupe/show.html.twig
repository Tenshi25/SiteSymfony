{% extends 'base.html.twig' %}
{% block title %}Groupe {{ groupe.nom }}{% endblock %}
{% block body %}
    <div class="container" style="margin-top :10px">
        <div class="row">
            <div class="col-xs-1 col-sm-1"></div>
            <div class="col-xs-10 col-sm-10">
                <div class="panel my-panel">
                    <div class="panel-heading text-center"><h1>Groupe {{ groupe.nom }}</h1></div>
                    <div class="panel-body my-panel-body">
                        <table class="table table-striped">
                            <tbody>
                            <tr>
                                <th>#Id</th>
                                <th>Nom</th>
                                <th>type</th>
                                <th>modifier</th>
                                <th>Supprimer</th>
                            </tr>
                            <tr>
                                <td>{{ groupe.id }}</td>
                                <td>{{ groupe.nom }}</td>
                                <td>{{ groupe.typeGroup.libelle }}</td>
                                <td><a class="btn btn-danger " type="button"
                                       href="{{ path('admin_groupe_edit', { 'id': groupe.id }) }}">Modifier</a></td>
                                <td>{{ form_start(delete_form) }}
                                    {{ form_widget(delete_form) }}
                                    <input class="btn btn-danger " type="submit" value="Supprimer">
                                    {{ form_end(delete_form) }}
                                </td>
                            </tr>
                            {% for unFaireParti in listeFaireParti %}
                                <tr>
                                    <td></td>
                                    <td>{{ unFaireParti.personne.nom }}</td>
                                    <td>{{ unFaireParti.personne.prenom }}</td>
                                    <td><a class="btn btn-danger " type="button"
                                           href="{{ path('admin_faire_parti_statut_delete', { 'id': unFaireParti.id} ) }}">supprimer</a></td>
                                           <!--href="{{ path('admin_faire_parti_statut_delete', { 'id': unFaireParti.id , 'idgroupe': groupe.id } ) }}">supprimer</a></td>-->

                                </tr>
                            {% endfor %}
                            <tr>
                                <td></td>

                                <td></td>
                                <td></td>
                            </tr>
                            </tbody>
                        </table>
                        {{ form_start(form_ajout) }}
                        {{ form_widget(form_ajout) }}
                        <input class="btn btn-danger" type="submit" value="Créer" />
                        {{ form_end(form_ajout) }}

                        <a class="btn btn-danger btn-lg btn-block" type="button"
                           href="{{ path('admin_groupe_index') }}">Retour à la liste</a>
                    </div>
                </div>
            </div>
            <div class="col-xs-1 col-sm-1"></div>
        </div>
    </div>
{% endblock %}
