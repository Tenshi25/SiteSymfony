{% extends 'base.html.twig' %}
{% block title %}Modification d'une Categorie de centre d'intérêt{% endblock %}
{% block body %}
    <div class="container" style="margin-top :10px">
        <div class="row">
        </div>
        <div class="row">
            <div class="col-xs-1 col-sm-1"></div>
            <div class="col-xs-10 col-sm-10">
                <div class="panel panel-danger" style="border-color:black;">
                    <div class="panel-heading text-center" style="background-image:linear-gradient(to bottom,#b92c28 0,#b92c28 100%);"><h2>Modification d'une Categorie de centre d'intérêt</h2></div>
                    <div class="panel-body">
                        <h1>Categoriecentreinteret edit</h1>
                        {{ form_start(edit_form) }}
                        {{ form_widget(edit_form) }}
