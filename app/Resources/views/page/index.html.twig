{% extends 'base.html.twig' %}
{% block title %}Liste des pages{% endblock %}
{% block body %}
<div class="container" style="margin-top :10px">
    <div class="row">
    </div>
    <div class="row">
        <div class="col-xs-1 col-sm-1"></div>
        <div class="col-xs-10 col-sm-10">
            <div class="panel my-panel" style="border-color:black;">
                <div class="panel-heading text-center" style="background-image:linear-gradient(to bottom,#b92c28 0,#b92c28 100%);"><h2>Liste des pages</h2></div>
                <div class="panel-body my-panel-body" >
                    <table class="table table-striped">
                        <tbody>
                        <tr>
                            <th>#Id</th>
                            <th>Titre</th>
                            <th>description</th>
                            <th>Afficher</th>
                            <th>Modifier</th>
                        </tr>
                            {% for page in pages %}
                                <tr>
                                    <td><a href="{{ path('admin_page_show', { 'id': page.id }) }}">{{ page.id }}</a></td>
                                    <td>{{ page.titre }}</td>
                                    <td>{{ page.description }}</td>
                                    <td> <a class="btn btn-danger " type="button" href="{{ path('admin_page_show', { 'id': page.id }) }}" >Afficher</a></td>
                                    <td> <a class="btn btn-danger " type="button" href="{{ path('admin_page_edit', { 'id': page.id }) }}" >Modifier</a></td>

                                </tr>
                            {% endfor %}

                    </tbody>
                    </table>
                    <a class="btn btn-danger btn-lg btn-block" type="button" href="{{ path('admin_page_new') }}" >Cr√©er une page</a>
                    <a class="btn btn-danger btn-lg btn-block" type="button" href="{{ path('menuPage') }}" >Retour</a>
                </div>

            </div>
        </div>
        <div class="col-xs-1 col-sm-1"></div>
    </div>
</div>
{% endblock %}
