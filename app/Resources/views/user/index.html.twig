{% trans_default_domain 'FOSUserBundle'%}
{% extends 'base.html.twig' %}
{% block title %}Liste Utilisateurs{% endblock %}
{% block body %}
<div class="container" style="margin-top :10px">
    <div class="row">
    </div>
    <div class="row">
        <div class="col-xs-1 col-sm-1"></div>
        <div class="col-xs-10 col-sm-10">
            <div class="panel panel-danger">
                <div class="panel-heading text-center"><h2>Liste d'utilisateur</h2></div>
                    <div class="panel-body">
                        <table class="table table-striped">
                            <tbody>
                            <tr>
                                <th>#Id</th>
                                <th>Nom</th>
                                <th>@Email</th>
                                <th>Rôle</th>
                                <th>Afficher</th>
                                <th>Modifier</th>

                            </tr>
                            {% for user in users %}
                                <tr>
                                    <td>{{ user.id }}</td>
                                    <td>{{ user.username }}</td>
                                    <td>{{ user.email }}</td>
                                    <td>
                                        {% for role in user.roles %}
                                            {{ role }}
                                        {% endfor %}
                                    </td>
                                    <td> <a class="btn btn-danger " type="button" href="{{ path('user_show', { 'id': user.id }) }}" >Afficher</a></td>
                                    <td> <a class="btn btn-danger " type="button" href="{{ path('user_edit', { 'id': user.id }) }}" >Modifier</a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <a class="btn btn-danger btn-lg btn-block" type="button" href="{{ path('user_new') }}" >Créer un Utilisateur</a>
                        <a class="btn btn-danger btn-lg btn-block" type="button" href="{{ path('menuAdmin') }}" >Retour</a>
                    </div>

            </div>
        </div>
        <div class="col-xs-1 col-sm-1"></div>
    </div>
</div>
{% endblock %}

