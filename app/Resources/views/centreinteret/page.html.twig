{% extends 'base.html.twig' %}

{% block title %}
    {{ centreInteret.titre }}
{% endblock %}
{% block body %}
<div class="container" style="margin-top :10px">
    <div class="row">
        <div class="col-xs-1 col-sm-1"></div>
        <div class="col-xs-10 col-sm-10">
            <div class="jumbotron myJubotron">

                <div class="panel my-panel">
                <div class="panel-body my-panel-body">
                <div class="col-xs-6 col-sm-6">
                <h3>{{ centreInteret.titre }}</h3>
                </div>
                <div class="col-xs-6 col-sm-6">
                <div class="pull-right">
                <img class="img-responsive image-Perso"  src="{{ asset('assets/images/blasonmons.png') }} " />
                </div>

                </div>
                </div>
                </div>
                <p> {{ centreInteret.description }} </p>

                {% if not centreInteret.photos is empty %}
                    {% for unePhoto in centreInteret.photos %}
                            <td><img src=" {{ asset('uploads/') }}{{ unePhoto.lienPhoto }}" style="width: 50px;height:50px" /></td>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
        <div class="col-xs-1 col-sm-1"></div>
    </div>
</div>


{% endblock %}
